<DeleteScreen>:
    GridLayout:
        cols:1
        spacing: 40
        padding: 20
        size: root.width, root.height
        canvas:
            Color:
                rgba: 0.961, 0.961, 0.863, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            id: per_label
            text:"Elimina el registro que desees"
